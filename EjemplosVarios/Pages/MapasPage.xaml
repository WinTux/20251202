                        <x:Double>0.01</x:Double>
                    </x:Arguments>
                </mapa:MapSpan>
            </x:Arguments>
            <mapa:Map.Pins>
                <mapa:Pin
                    Label="Plaza Bolivia"
                    Address="Una plaza en mantenimiento"
                    Type="Place">
                    <mapa:Pin.Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.507204461925344</x:Double>
                                <x:Double>-68.126921552756</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                    </mapa:Pin.Location>
                </mapa:Pin>
            </mapa:Map.Pins>
            <mapa:Map.MapElements>
                <mapa:Polygon StrokeColor="#ecb273" StrokeWidth="7" FillColor="#99fde9b4">
                    <mapa:Polygon.Geopath>
                        <ubicacion:Location>
                            <x:Arguments>
