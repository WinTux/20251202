                                <x:Double>-68.13123734689633</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.502070889250998</x:Double>
                                <x:Double>-68.13103349902111</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.502221814333087</x:Double>
                                <x:Double>-68.13128367421727</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.501989048185983</x:Double>
                                <x:Double>-68.1314847146749</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                    </mapa:Polygon.Geopath>
                </mapa:Polygon>
                <mapa:Polyline StrokeColor="#ecb2f3" StrokeWidth="10">
                    <mapa:Polyline.Geopath>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.502299125442345</x:Double>
                                <x:Double>-68.1312478410506</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
