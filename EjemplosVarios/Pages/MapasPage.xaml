                                <x:Double>-16.502608370382536</x:Double>
                                <x:Double>-68.13189741348337</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.502526193453683</x:Double>
                                <x:Double>-68.13230339625387</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.501622615972295</x:Double>
                                <x:Double>-68.13292586431473</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                    </mapa:Polyline.Geopath>
                </mapa:Polyline>
                <mapa:Circle
                    StrokeColor="#31a8d0"
                    StrokeWidth="9"
                    FillColor="#88a2e1e6">
                    <mapa:Circle.Center>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.50417969636474</x:Double>
                                <x:Double>-68.1311406377252</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
                    </mapa:Circle.Center>
                    <mapa:Circle.Radius>
                        <mapa:Distance>
                            <x:Arguments>
                                <x:Double>45</x:Double>
                            </x:Arguments>
                        </mapa:Distance>
                    </mapa:Circle.Radius>
                </mapa:Circle>
            </mapa:Map.MapElements>
        </mapa:Map>
    </Grid>
</ContentPage>