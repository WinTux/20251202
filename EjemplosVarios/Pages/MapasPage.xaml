<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapa="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             xmlns:ubicacion="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="EjemplosVarios.Pages.MapasPage"
             Title="Mapa">
    <Grid>
        <mapa:Map 
            x:Name="mimapa"
            IsShowingUser="True"
            IsTrafficEnabled="False"
            MapClicked="OnMapaClic">
            <x:Arguments>
                <mapa:MapSpan>
                    <x:Arguments>
                        <ubicacion:Location>
                            <x:Arguments>
                                <x:Double>-16.506882576768685</x:Double>
                                <x:Double>-68.12752451923136</x:Double>
                            </x:Arguments>
                        </ubicacion:Location>
