<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EjemplosVarios.Pages.Camara2Page"
             Title="Camara2Page">
    <VerticalStackLayout>
        <Label 
            x:Name="info"
            Text="Vista previa (Flash desactivado)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <toolkit:CameraView
            x:Name="camara"
            IsTorchOn="True"
            WidthRequest="300"
            HeightRequest="300"
            MediaCaptured="OnCapturaTomada"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button
                x:Name="ZoomOut"
                Clicked="OnZoomOutClicked"
                Text="-"/>
            <Button 
                Text="Tomar foto"
                Clicked="OnTomarFotoClic"
                HorizontalOptions="Center" />
            <Button
                x:Name="ZoomIn"
                Clicked="OnZoomInClicked"
                Text="+"/>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout  HorizontalOptions="Center">
            <Button 
                Text="Des. previa"
                Clicked="OnDesactivarClic"
                HorizontalOptions="Center" />
            <Button 
                Text="Flash"
                Clicked="OnFlashClic"
                HorizontalOptions="Center" />
            <Button 
                Text="Act. previa"
                Clicked="OnActivarClic"
                HorizontalOptions="Center" />
        </HorizontalStackLayout>
        <Label 
            Text="Resultado"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image x:Name="imagen" HeightRequest="250" WidthRequest="250" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>