<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemplosVarios.Pages.GridPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Layout Grid">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <toolkit:MediaElement
            x:Name="video"
            WidthRequest="450"
            HeightRequest="450"
            Aspect="Fill"
            Source="embed://ForBiggerBlazes.mp4"/>
        <Button
            Grid.Column="1"
            x:Name="btn"
            Text="Play/Pause"
            HorizontalOptions="Center"/>
        <Slider
            Grid.Row="1"
            x:Name="recorrido"
            Minimum="0"
            Maximum="15"
            Rotation="0"
            WidthRequest="100"
            ValueChanged="OnPosicionCambiada"/>
        <Slider
            Grid.Column="1"
            Grid.Row="1"
            Minimum="0.0"
            Maximum="15.0"
            Rotation="45"
            WidthRequest="100"/>
    </Grid>
</ContentPage>